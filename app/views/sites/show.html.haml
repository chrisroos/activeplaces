- content_for :head do
  :javascript
    $(function() { new Map("secondary-map", {
        mapZoom   : 15,
        mapControl: 'small',
        locations : [#{@site.to_json}]
      });
    });
  

- content_for :secondary do
  %h4 Nearby Sites
  %ul#locations
    - @site.closest_sites.each do |site|
      %li
        = link_to site.title, site_path(site)
        %ul
          - site.facilities.each do |facility|
            %li= facility.facility_type.name      

%h2= @site.title

#secondary-map

- if @site.facilities.public.any?
  %h3 Public Facilities
  %ul
    - @site.facilities.public.each do |facility|
      %li
        = facility.facility_type.name
        - if facility.facility_sub_type
          == (#{facility.facility_sub_type.name})

- if @site.facilities.private.any?
  %h3 Private Facilities
  %ul
    - @site.facilities.private.each do |facility|
      %li
        = facility.facility_type.name
        - if facility.facility_sub_type
          == (#{facility.facility_sub_type.name})
      

%h3 Details
%h4 Telephone
%p= @site.telephone

